<div class="well">
	<span class="pull-right">
		<a title="{_'menu.button.moveUp'}" n:class="btn, $ajaxEnabled ? ajax, $isFirst ? disabled" href="{link moveUp!}">{icon chevron-up}</a>
		<a title="{_'menu.button.moveDown'}" n:class="btn, $ajaxEnabled ? ajax, $isLast ? disabled" href="{link moveDown!}">{icon chevron-down}</a>
		<a title="{_'common.button.delete'}" n:class="btn, $ajaxEnabled ? ajax" n:href="this, view => Delete">{icon trash}</a>
	</span>
	<h4>{_}menu.panel.editMenuItem{/_}</h4>
	{control editMenuItemForm}
</div>
