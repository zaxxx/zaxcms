{layout './@layout.latte'}

{define panelTitle}
	{_}menu.panel.editMenu{/_}
{/define}

{define addItemButton}
	<li n:class="$control->selectItem == -1 && $control->selectMenu == $item->id ? active">
		<a n:class="$ajaxEnabled ? ajax" n:href="this, selectMenu => $item->id, selectItem => -1">{icon plus} {_'common.button.add'}</a>
	</li>
{/define}

{define panelContent}
	<div class="row">
		<div class="col-sm-4">
				{var $depth = $root->depth - 1}
				{var $prev = $root}
				{foreach $items as $item}
					{if $depth < $item->depth}
						<ul class="nav nav-pills nav-stacked">
					{elseif $depth === $item->depth && $depth === $root->depth + 1}
							<ul class="nav nav-pills nav-stacked">
								{include addItemButton, item => $prev}
							</ul>
						</li>
					{else}
						{for $i=$item->depth; $i<$depth; $i++}
							</li>
								{include addItemButton, item => $prev->parent}
							</ul>
						{/for}
						</li>
					{/if}
					<li n:class="$control->selectItem == $item->id ? active">
						<a n:class="$ajaxEnabled ? ajax" n:href="this, selectItem => $item->id">{$item->text}</a>

					{?$depth = $item->depth}
					{?$prev = $item}
				{/foreach}
				{for $i=$root->depth; $i<$depth-1; $i++}
					</li>
					</ul>
				{/for}
					<ul class="nav nav-pills nav-stacked">
						{if $prev->depth === $root->depth + 1}
							{include addItemButton, item => $prev}
						{else}
							{include addItemButton, item => $prev->parent}
						{/if}
					</ul>
				</li>
				<li n:class="$control->selectItem == -1 && $control->selectMenu == NULL ? active">
					<a n:class="$ajaxEnabled ? ajax" n:href="this, selectMenu => NULL, selectItem => -1">{icon plus} {_'common.button.add'}</a>
				</li>
			</ul>
		</div>

		<div class="col-sm-8">
			{if $control->selectItem > 0}
				{control editMenuItem}
			{elseif (int)$control->selectItem === -1}
				{control addMenuItem}
			{* else}
				{control editMenu *}
			{/if}
		</div>
	</div>

{/define}