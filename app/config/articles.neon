extensions:
    ZaxCMSArticle: ZaxCMS\DI\ArticleExtension

ZaxCMSArticle:
    list:
        itemsPerPage: 15
        tagsOnBottom: TRUE
    category:
        showBreadCrumb: NULL
        showSubcategories: NULL
        sidebarWidth: 4
    article:
        defaults:
            isPublic: FALSE
            isVisibleInRootCategory: TRUE
            isMain: FALSE
            sidebarCategory: TRUE
            imageConfig:
                visible:
                    root: TRUE
                    list: TRUE
                    detail: TRUE
                styles:
                    root: 1
                    list: 1
                    detail: 2
                open:
                    root: FALSE
                    list: FALSE
                    detail: TRUE
        showTimePosted: TRUE
        showAuthor: TRUE
        showCategory: TRUE
        showTagsList: FALSE
        showTagsDetail: TRUE
        tagsOnBottom: TRUE
        sidebarWidth: 4
    author:
        sidebarWidth: 4
        showList: NULL