{layout './@layout.latte'}
{define dateTimeControl}

	{var $year = $selectedValue->format('Y')}
	{var $month = $selectedValue->format('m')}
	{var $day = $selectedValue->format('j')}
	{var $hour = $selectedValue->format('h')}
	{var $minute = $selectedValue->format('i')}

	{* $selectedValue->format('Y-m-d h:i:s') *}

	<table class="table table-bordered table-text-center">
		<tr>
			<th colspan="7">
				<a class="btn pull-left ajax" n:href="this, selectedValue => $selectedValue->modifyClone('-1 month')->format('Y-m-d h:i:s')"><span class="glyphicon glyphicon-arrow-left"></span></a>
				{$month|beautifulMonth|firstUpper}
				<a class="btn pull-right ajax" n:href="this, selectedValue => $selectedValue->modifyClone('+1 month')->format('Y-m-d h:i:s')"><span class="glyphicon glyphicon-arrow-right"></span></a>
			</th>
			<th colspan="7">
				<a class="btn pull-left ajax" n:href="this, selectedValue => $selectedValue->modifyClone('-1 year')->format('Y-m-d h:i:s')"><span class="glyphicon glyphicon-arrow-left"></span></a>
				{$year}
				<a class="btn pull-right ajax" n:href="this, selectedValue => $selectedValue->modifyClone('+1 year')->format('Y-m-d h:i:s')"><span class="glyphicon glyphicon-arrow-right"></span></a>
			</th>
		</tr>
		<tr>
			{for $i=1;$i<=7;$i++}
				<th colspan="2">{$i|shortDayOfWeek}</th>
			{/for}
		</tr>

		{var $prototype = $selectedValue->modifyClone('first day of this month')}
		{var $dayOfWeek = $prototype->format('N')}
		{for $i=1; $i<cal_days_in_month(CAL_GREGORIAN, $month, $year); $i++}
			{if (int)$dayOfWeek === 1}
				<tr>
			{/if}
			{if $i === 1 && $dayOfWeek > 1}
				{for $j=1;$j<$dayOfWeek;$j++}<td colspan="2">-</td>{/for}
			{/if}
			<td colspan="2"{if $prototype == $selectedValue} class="bg-primary"{/if}><a n:href="this, selectedValue => $prototype->format('Y-m-d h:i:s')" class="ajax">{$prototype->format('j')}</a></td>
			{if (int)$dayOfWeek % 7 === 0}
				</tr>
			{/if}
			{? $prototype->modify('+1 day')}
			{? $dayOfWeek = $prototype->format('N')}
		{/for}
		{if $dayOfWeek < 7}
			{for $i=$dayOfWeek;$i<=7;$i++}<td colspan="2">-</td>{/for}
		{/if}

	</table>

{/define}